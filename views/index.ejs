<!DOCTYPE html>
<html>
  <head>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700&family=Lora:wght@400;700&family=Dancing+Script:wght@400;700&family=Raleway:wght@400;600&display=swap" rel="stylesheet">
    <title><%= title %> | Bake & Co.</title>
    <link rel="stylesheet" href="/css/main.css">
  </head>
  <body>
    <!-- Include Navbar -->
    <%- include('./partials/navbar.ejs'); %>

    <!-- Hero Section -->
    <div class="hero-section">
        <div class="hero-background"></div>
        <div class="hero-content">
        <h1>Freshly Baked with Love</h1>
        <p>Experience the magic of artisanal baking, crafted to delight your senses.</p>
        <div class="hero-buttons">
            <a href="/menu" class="btn-primary">View Menu</a>
            <a href="/order" class="btn-secondary">Order Online</a>
        </div>
        <div class="hero-accent">❦</div> <!-- Subtle romantic flourish -->
        </div>
    </div>

    <!-- Featured Products Section -->
    <section class="featured-products">
      <div class="parallax-background" style="background-image: url('/images/brownies.jpg');"></div>
      <div class="products-header">
        <h2>Featured Delights</h2>
        <p class="cta-subtitle">Your perfect treat awaits. Indulge in our handcrafted delights today!</p>
      </div>

      <div class="products-grid">
        <!-- Product 1 -->
        <div class="product-card">
          <img src="/images/brownies.jpg" alt="Fudgy Brownies" class="product-img">
          <div class="product-content">
            <h3>Oreo Fudgy Brownies</h3>
            <p class="price">$12.99</p>
            <a href="/order" class="btn-featured">Add to Cart</a>
          </div>
        </div>
        <!-- Product 2 -->
        <div class="product-card">
          <img src="/images/cake.jpg" alt="Chocolate Cake" class="product-img">
          <div class="product-content">
            <h3>Heavenly Chocolate Cake</h3>
            <p class="price">$29.99</p>
            <a href="/order" class="btn-featured">Add to Cart</a>
          </div>
        </div>
        <!-- Product 3 -->
        <div class="product-card">
          <img src="/images/cookies.jpg" alt="S'mores Chocolate Cookies" class="product-img">
          <div class="product-content">
            <h3>S'mores Cookies</h3>
            <p class="price">$9.99</p>
            <a href="/order" class="btn-featured">Add to Cart</a>
          </div>
        </div>
      </div>
    </section>

    <!-- Specials or Promotions Section -->
    <section class="specials-section">
      <div class="specials-content">
        <h2 class="specials-title">Indulge in Our Seasonal Specials ❦</h2>
        <p class="specials-description">
          Discover exclusive seasonal treats crafted with passion. Don't miss out on our limited-time offers, perfect for sharing with loved ones.
        </p>

        <!-- Seasonal Offers -->
        <div class="specials-items">
          <div class="special-item">
            <h3 class="item-title">Pumpkin Spice Cupcakes</h3>
            <p class="item-description">A taste of autumn, topped with spiced cream cheese frosting.</p>
            <span class="item-price">$4.50 each</span>
          </div>
          <div class="special-item">
            <h3 class="item-title">Cranberry Almond Loaf</h3>
            <p class="item-description">Soft, nutty, and sweet – the perfect holiday treat.</p>
            <span class="item-price">$7.99</span>
          </div>
        </div>

        <!-- Countdown Timer (Optional) -->
        <div class="countdown-container">
          <p class="countdown-text">Offer ends in:</p>
          <div id="countdown" class="countdown-timer"></div>
        </div>
      </div>
    </section>
      
    <!-- Include Footer -->
    <%- include('./partials/footer.ejs'); %>

    <script src="/js/main.js"></script>
  </body>
</html>
